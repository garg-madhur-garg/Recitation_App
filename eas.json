{
  "cli": {
    "version": ">= 14.5.0",
    "appVersionSource": "remote"
  },
  
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },

    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },

    "production": {
      "distribution": "store",
      "android": {
        "buildType": "app-bundle"
      },
      "autoIncrement": true
    }

  },
  "submit": {
    "production": {}
  }
}